{% extends 'admin/base.html.twig' %}

{% block body %}

    <head class="Menu">
        <div class="Menu-bosup">
            <div class="block-01 flex-align-vertical Menu-bosup--content">
                <div class="Menu-bosup--logo">
                    <a href=""><img src="../img/logo_pingPong.svg" alt=""></a>
                </div>
                <div class="Menu-bosup--infos">
                    <i class="zmdi zmdi-account"></i>
                    <span><strong>Bonjour</strong>{% if app.user is not null %} {{ app.user.firstname }} {{ app.user.lastname }}{% endif %}</span>
                    <i class="zmdi zmdi-chevron-down"></i>
                </div>
            </div>

            <section class="Navigation block-01">
                <ul class="Navigation-container flex-align-vertical">
                    <li data-tab="tabBord" class="is-active">Tableau de bord</li>
                    <li data-tab="listeParticipants">Liste des participants</li>
                    <li data-tab="gestionChampions">Gestion des champions</li>
                    <li data-tab="messagerie" class="messagerie">Messagerie</li>
                </ul>
            </section>
        </div>
    </head>


    <section class="main open" data-uri="tabBord">
        <section class="Board">
            <article class="Board-list block-01">
                <div>
                    <strong>Les structures</strong>
                    <span>{{ structures|length }}</span>
                </div>
                <div>
                    <strong>Participants</strong>
                    <span>{{ players|length }}</span>
                </div>
                <div>
                    <strong>Équipes crées</strong>
                    <span>{{ users|length }}</span>
                </div>
                <div>
                    <strong>Les tournois</strong>
                    <span>{{ tournaments|length }}</span>
                </div>
            </article>
        </section>

        <section class="block-01">
            <div class="block-02">
                <article class="Tab">
                    <div class="Tab-title flex-align-vertical">
                        <h3>Les Teams</h3>
                        <a href="">Tous les teams <i class="zmdi zmdi-caret-right"></i></a>
                    </div>
                    <ul class="Tab-content">
                        {% for user in users %}
                            <li>
                                <strong class="Tab-company">{{ user.teamname }}</strong>
                                <span class="Tab-participants">{{ user.players|length }} participants invités</span>
                                <span class="Tab-team">{{ user.structurename }}</span>
                                <span class="Tab-select">Statut du tournoi<br>
                                    {% if user.tournament == null %}
                                        <strong class="selection">Pré-selections</strong>
                                        {% elseif user.tournament.status == 1 %}
                                        <strong class="started">Tournoi en cours</strong>
                                    {% elseif user.tournament.status == 0 %}
                                        <strong class="finish">Tournoi terminé</strong>
                                    {% endif %}
                                    </strong>
                            </span>
                            </li>
                        {% endfor %}
                    </ul>
                </article>
                <br/><br/>
                <article class="Tab">
                    <div class="Tab-title flex-align-vertical">
                        <h3>Les tournois</h3>
                        <a href="">Tous les tournois <i class="zmdi zmdi-caret-right"></i></a>
                    </div>
                    <ul class="Tab-content">
                        {% for tournament in tournaments %}
                            <li>
                                <strong class="Tab-company">{{ tournament.user.teamname }}</strong>
                                <span class="Tab-participants">{{ tournament.user.players|length }} participants</span>
                                <span class="Tab-team">
                                    {% if tournament.status == 1 %}
                                        En cours
                                    {% else %}
                                        Terminé
                                    {% endif %}
                                </span>
                            <span class="Tab-select">
                                {% if tournament.status == 0 %}
                                    Vainqueur<br>
                                    <strong class="finish">{{ tournament.winner.firstname }} {{ tournament.winner.lastname }}</strong>
                                {% endif %}
                            </span>
                            </li>
                        {% endfor %}
                    </ul>
                </article>
                <br/><br/>
            </div>

            <aside class="block-03">
                <section class="Management">
                    <span>Gestion<br>des champions</span>
                    <a href="">Gérer <i class="zmdi zmdi-caret-right"></i></a>
                </section>

                <section class="Calendar">
                    <div class="calendar calendar-first" id="calendar_first">
                        <div class="calendar_header">
                            <button class="switch-month switch-left"><i class="zmdi zmdi-chevron-left"></i></button>
                            <h2>Janvier 2017</h2>
                            <button class="switch-month switch-right"><i class="zmdi zmdi-chevron-right"></i></button>
                        </div>
                        <div class="calendar_weekdays">
                            <div>L</div>
                            <div>Ma</div>
                            <div>Me</div>
                            <div>J</div>
                            <div>V</div>
                            <div>S</div>
                            <div>D</div>
                        </div>
                        <div class="calendar_content">
                            <div class="past-date">26</div>
                            <div class="past-date">27</div>
                            <div class="past-date">28</div>
                            <div class="past-date">29</div>
                            <div class="past-date">30</div>
                            <div class="past-date">31</div>
                            <div>1</div>
