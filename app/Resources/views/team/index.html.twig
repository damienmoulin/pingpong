{% extends 'team/base.html.twig' %}

{% block body %}
    <div class="page-home">
        <nav>
            <!-- NAVIGATION -->
            <div class="hamburger">
                <i class="zmdi zmdi-menu menu"></i>
            </div>

            <div class='menu-1'>
                <nav>
                    <div class="col-md-12">
                        <a href="/">
                            <img src="../img/logo-menu.png" alt="Logo pingpongstartupcup">
                        </a>
                    </div>

                    <div class="col-md-12">
                        <ul class="navi">
                            <li><a href='#'>Accueil</a></li>
                            <li><a href='#'>Les résultats</a></li>
                            <li><a href='#'>Mon équipe</a></li>
                            <li><a href='#'>Web Live Tv</a></li>
                            <li class="bell">
                                <a href="#">
                                    <i class="zmdi zmdi-notifications-active"></i>
                                    <div class="label">Notifications</div>
                                </a>
                            </li>
                        </ul>

                        <ul class="contact">
                            <li>
                                <a href="#">
                                    <i class="zmdi zmdi-email"></i>
                                    <div class="ul-contact">Contact</div>
                                </a>
                            </li>

                            <li>
                                <a href="#">
                                    <i class="zmdi zmdi-alert-circle-o"></i>
                                    <div class="ul-contact">A propos</div>
                                </a>
                            </li>

                            <li>
                                <a href="#">
                                    <i class="zmdi zmdi-help"></i>
                                    <div class="ul-contact">Aide</div>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="zmdi zmdi-power"></i>
                                    <div class="ul-contact">Déconnexion</div>
                                </a>
                            </li>
                        </ul>

                        <div class="rs">
                            <p>Partager l’expérience</p>
                            <a href="#">
                                <i class="zmdi zmdi-facebook"></i>
                            </a>

                            <a href="#">
                                <i class="zmdi zmdi-twitter"></i>
                            </a>
                        </div>
                    </div>
                </nav>
            </div>

            <!-- INSCRIPTION -->
            <button type="button" class="btn inscription" data-toggle="modal" data-target="#modal-connexion">
                <i class="material-icons face">face</i>
            </button>

            <!-- Modal -->

            <button class="btn search" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                <i class="zmdi zmdi-search"></i>
            </button>

            <div class="collapse" id="collapseExample">
                <div class="well search-page">
                    <div class="form-group">
                        <input class="form-control" placeholder="Rechercher une équipe...">
                        <button type="submit" class="btn btn-default"><i class="zmdi zmdi-search"></i></button>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="modal-connexion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <!-- HEADER -->
                        <div class="modal-header">
                            <a class="logo-connexion" href="/">
                                <img src="../img/logo-connexion.jpg" alt="Logo PingPongStartupcup">
                            </a>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <i class="zmdi zmdi-plus"></i>
                            </button>
                        </div>

                        <!-- BODY -->
                        <div class="modal-body">
                            <!-- CONNEXION -->
                            <div class="form">
                                <h4>Connexion</h4>
                                <p><sup>*</sup> Veuillez remplir les champs ci-dessous</p>
                                {{ render(url('fos_user_security_login')) }}

                                <a class="account connexion" href="#">
                                    Vous avez déja un compte ? <br>Inscrivez vous !
                                </a>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
        </nav>

        <div class="head">
            <img src="../img/logo_pingPong_FO.svg" alt="">
            <div>
                <span>Équipe</span>
                <strong>Hetiland</strong>
            </div>
        </div>
    </div>

    <!-- TODO HEADER + METTRE NOM DE LEQUIPE-->

    <div class="block-01 pt">
        <h2 class="title-1">Ajout d'un coéquipier</h2>
        <p class="sub-title">Tu peux inviter jusqu'à 16 personnes</p>


        <section class="Form-01">
            {{ form_start(form) }}
            <div class="form_control group">
                {{ form_widget(form.firstname) }}
                <span class="highlight"></span><span class="bar"></span>
                {{ form_label(form.firstname) }}
            </div>
            <div class="form_control group">
                {{ form_widget(form.lastname) }}
                <span class="highlight"></span><span class="bar"></span>
                {{ form_label(form.lastname) }}
            </div>
            <div class="form_control group">
                {{ form_widget(form.structure) }}
                <span class="highlight"></span><span class="bar"></span>
                {{ form_label(form.structure) }}
            </div>
            <div class="form_control group">
                {{ form_widget(form.email) }}
                <span class="highlight"></span><span class="bar"></span>
                {{ form_label(form.email) }}
            </div>
            <input type="submit" value="+">
            {{ form_end(form) }}
        </section>

        {% if acceptedPlayers|length == 16 %}
            <p>Vous avez atteint la limite de 16 joueurs</p>
        {% endif %}

        <h2 class="title-1">Ton équipe | {{ acceptedPlayers|length }}/16 </h2>
        <p class="sub-title">Il faut un minimum de 4 personnes dans ton équipe</p>

        <section class="Tab-01">
            {% for player in user.players %}
            <article class="Accordion">
                <div class="Flex-container">
                    <div class="player">
                        <strong>Joueur {{ loop.index }}</strong>
                    </div>
                    <div class="infos-player">
                        <strong>{{ player.firstname }} {{ player.lastname }}</strong>
                        <span>{{ player.structure }}</span>
                    </div>
                    <div class="mail-player">
                        <span>{{ player.email }}</span><br/>
                        <strong class="status valid">
                            {% if player.status  == 1%}
                                Activé
                            {% elseif player.status == 0 %}
                                Refusé
                            {% else %}
                                En attente
                            {% endif %}
                        </strong>
                    </div>
                    <div class="Accordion-more">
                        <i class="zmdi zmdi-chevron-down"></i>
                    </div>
                </div>

                <div class="Accordion-content is-close">
                    <a href="{{ path('team_stop_invitation', { 'player' : player.id }) }}" class="btn-1 btn-grey">Annuler invitation</a>
                    <a href="{{ path('team_re_invitation', { 'player' : player.id }) }}" class="btn-1 btn-red">Relancer</a>
                </div>
            </article>
            {% endfor %}
        </section>

        <div class="center">
            {% if acceptedPlayers|length >= 4 and acceptedPlayers|length %2 == 0 and user.tournament is null %}
                <a class="btn-1 btn-green whitout-margin" href="{{ path('contest_start', { 'user': user.id }) }}">Lancer le Tournoi</a>
            {% elseif user.tournament is not null %}
                <a class="btn-1 btn-green whitout-margin" href="{{ path('contest_index', { 'tournament': user.tournament.id }) }}">Tableau du Tournoi</a>
            {% endif %}
        </div>
    </div>
    <br>
    <br>


{% endblock %}

{% block stylesheets %}

{% endblock %}
